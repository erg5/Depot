<p id="notice"><%= notice %></p>

<h1 style="text-shadow:2px 2px 0 #444" class="w3-text-sand w3-container w3-lobster">Quotes</h1>

<table>
  <thead>
    <tr>
      <th  class="w3-container w3-lobster">Author</th>
      <th class="w3-container w3-lobster">Quotation</th>
      <th class="w3-container w3-lobster">Source</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>


    <% @quotes.each do |quote| %>
      <tr>
        <td><%= quote.author %></td>
        <td><%= quote.quotation %></td>
        <td><%= quote.source %></td>
        <td><%= link_to 'Show', quote %></td>
        <td><%= link_to 'Edit', edit_quote_path(quote) %></td>
        <td><%= link_to 'Destroy', quote, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Quote', new_quote_path %>
